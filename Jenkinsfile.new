pipeline {
    agent any
    tools {
        jdk 'jdk17'
        maven 'mvn1'
    }

    stages {
        stage('CheckoutSCM') { 
            steps {
                git branch: 'master', credentialsId: 'ssh-key-git', url: 'git@github.com:cloudrural/cr-auth-service.git'
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.8.1-openjdk-17'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                sh '''
                    echo 'Sonar Running'
                    echo 'Sonar Completed'
                '''
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
                stash includes: 'target/', name: 'artifacts'
            }
        }
        stage('Publish to S3') {
            agent {
                docker {
                    image 'maven:3.8.1-openjdk-17'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                unstash 'artifacts'
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'aws-bpantala', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh 'aws s3 cp target/cr-auth-service-*.jar s3://bpantala-test-bucket/target/'
                }
            }
        }
    }
}
